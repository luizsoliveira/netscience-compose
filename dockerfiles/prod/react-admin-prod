FROM node:14-alpine AS production
# IMPORTANT: If changed to production it disable the dev dependencies install including vite
# in this architecture 
ENV NODE_ENV production
# Add a work directory
WORKDIR /app/admin
# Cache and Install dependencies
COPY ./app/admin/package.json .
# COPY ./app/admin/package-lock.json .
RUN npm install
# Copy app files
# COPY . .
# Expose port
#EXPOSE 3000
# Start the app
CMD npm run build